{{define "inicio"}}
{{template "cabecera"}}
<a name="" id="" class="btn btn-primary" href="/crear" role="button">Agregar empleado</a>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Nombre</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Foto</th>
    </tr>
  </thead>
  <tbody>
    {{range.}}
    <section>
        <div class="container">
            <div class="row">
                <div class="card mb-3">
                    <img src={{.Foto}} class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Nombre: {{.Nombre}}</h5>
                        <p class="card-text">Marca: {{.Marca}}</p>
                        <p class="card-text"><small class="text-muted">Precio: {{.Precio}} COP</small></p>
                    </div>
                </div>
            </div>
    </section>
        {{end}}
    <tr>
      <td scope="row"></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
{{template "footer"}}
{{end}}
